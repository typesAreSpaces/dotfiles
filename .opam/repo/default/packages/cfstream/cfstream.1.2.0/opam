build: ["omake" "PREFIX=%{prefix}%" "COMPILE_TEST=false"]
install: ["omake" "install"]
remove: ["ocamlfind" "remove" "cfstream"]

build-doc: [
  ["omake" "doc"]
  ["omake" "install_doc" "DOC_DIR=%{doc}%/cfstream"]
]

depends: [
  "ocamlfind" {build}
  "omake" {build}
  "core_kernel" {< "v0.11"}
]

available: [
  ocaml-version >= "4.01.0" & ocaml-version < "4.06.0"
]

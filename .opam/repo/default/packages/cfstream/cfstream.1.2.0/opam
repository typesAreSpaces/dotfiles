name: "cfstream"
version: "1.2.0"
homepage: "https://github.com/biocaml/cfstream"
dev-repo: "https://github.com/biocaml/cfstream.git"
bug-reports: "https://github.com/biocaml/cfstream/issues"
license: "LGPL + linking exception"

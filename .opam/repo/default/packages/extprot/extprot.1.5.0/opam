bug-reports: "https://github.com/mfp/extprot/issues"
build: [
  ["omake"]
]
build-test: [
  ["omake" "test"]
]
install: [
  ["omake" "install" "prefix=%{prefix}%"]
]
remove: [
  ["ocamlfind" "remove" "extprot"]
  ["rm" "-f" "%{bin}%/extprotc" "%{bin}%/extprotc.exe"]
]
depends: [
  "omake" {build}
  "ocamlfind" {build}
  "ounit" {test}
  "camlp4" {build}
  ("extlib" | "extlib-compat")
  "base-bytes"
]
available: [ocaml-version >= "4.02.0" & ocaml-version < "4.06.0"]

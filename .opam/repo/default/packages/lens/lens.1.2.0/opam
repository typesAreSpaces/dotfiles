build: [
  ["ocaml" "setup.ml" "-configure" "--prefix" prefix "--enable-ppx" {ppx_deriving:installed & ppx_tools:installed} ]
  ["ocaml" "setup.ml" "-build"]
]
install: ["ocaml" "setup.ml" "-install"]
remove: [
  ["ocamlfind" "remove" "lens"]
]

remove: [["ocamlfind" "remove" "biniou"]]
depends: [
  "conf-which" {build}
  "ocamlfind"
  "easy-format"
]
install: [make "install" "BINDIR=%{bin}%"]

# -bin-annot flag is used unconditionally, requiring ocaml >= 4.xx
available: [ocaml-version >= "4.00" & ocaml-version < "4.06.0" ]

	[ make "uninstall" ]
	[ make "uninstall-bin" "BIN=%{bin}%" ]
]

depends: [
  "camlp5"
  "ppx_tools_versioned" {= "5.1"}
  "ppx_deriving"
  "ocaml-migrate-parsetree"
  "re"
  ]

available: [ocaml-version >= "4.02.0"]

build: [
	[make "-j%{jobs}%"]
]

build-test: [
	[make "-j%{jobs}%" "test"]
]

install: [
	[make "PREFIX=%{prefix}%" "install"]
]

remove: [
	[make "PREFIX=%{prefix}%" "remove"]
]

depends: [
	"containers" {< "2.0"}
	"duration"
	"merlin-of-pds"
	"ocamlfind"
	"pds" { build & (>= "5" & < "6") }
	"revops"
]


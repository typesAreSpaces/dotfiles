opam-version: "1"
version: "4.06.0"
src: "https://github.com/ocaml/ocaml/archive/4.06.0.tar.gz"
build: [
  ["./configure" "-prefix" prefix "-with-debug-runtime" "-flambda"
    "-cc" "musl-clang -Os"
    "-aspp" "musl-clang -c"
    "-libs" "-static"
    "-no-curses" "-no-graph"
    "-no-shared-libs"
    ]
  [make "world"]
  [make "world.opt"]
  [make "install"]
]
packages: [
  "base-unix"
  "base-bigarray"
  "base-threads"
]
env: [[CAML_LD_LIBRARY_PATH = "%{lib}%/stublibs"]]
